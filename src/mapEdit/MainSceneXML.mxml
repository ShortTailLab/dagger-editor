<?xml version="1.0" encoding="utf-8"?>
<s:Module xmlns:fx="http://ns.adobe.com/mxml/2009"
		  xmlns:s="library://ns.adobe.com/flex/spark"
		  xmlns:mx="library://ns.adobe.com/flex/mx"
		  xmlns:ns1="*"
		  xmlns:mapEdit="mapEdit.*"
		  width="100%" height="100%">
	<s:Group id="mContentLayer" width="100%" height="100%">
		<!-- background color -->
		<s:Rect top="0" left="0" right="0" bottom="0">
			<s:fill><s:SolidColor color="0xEEEEFF"/></s:fill>
		</s:Rect>
		<s:VGroup width="100%" height="100%">
			
			<s:HGroup width="100%" height="100%">
				<s:VGroup width="0" height="100%"/>
				<s:Group id="mAdaptiveLayer2" width="220" height="100%">
					
					<s:VGroup width="80%" height="100%"
							  horizontalCenter="0"
							  verticalAlign="middle" 
							  horizontalAlign="center">
						<s:Panel width="100%" height="115" title="相关信息" dropShadowVisible="false">
							<s:HGroup width="100%" height="100%" horizontalAlign="left"  verticalAlign="top">
								<s:Group width="10" height="20"/>
								<s:VGroup width="100%" height="100%">
									<s:Group height="10"/>
									<s:Label id="mInfoName" fontSize="12" text="对象名字：" horizontalCenter="0" />
									<s:Label id="mInfoPos" fontSize="12" text="对象位置：(0, 0)"/>
									<s:HGroup >
										<s:Label id="mSectionDelayLabel" fontSize="12" text="兵阵延迟：" horizontalCenter="0"/>
										<s:TextInput id="mSectionDelayInput" width="50" restrict=".0-9\-" />
									</s:HGroup>
									
								</s:VGroup>
							</s:HGroup>
						</s:Panel>
						<s:Panel id="mSelectionPanel" width="100%" height="25%" title="选中对象(0) 剪贴板：关闭" dropShadowVisible="false">
							<s:Group id="mSelectedBoard" width="100%" height="100%"/>
						</s:Panel>
						<s:Panel id="mRelatedInfo" width="100%" height="300" title="地图配置及信息" dropShadowVisible="false">
							<s:HGroup width="100%" height="100%" horizontalAlign="left"  verticalAlign="top">
								<s:Group width="10" height="20"/>
								<s:VGroup width="100%" height="100%">
									<s:Group height="10"/>
									<s:Label id="mMousePos" fontSize="12" text="鼠标位置：(0, 0)"/>
									<s:Label id="mMapLength" fontSize="12" text="地图长度：0"/>
									<s:Label id="mTotalMonsters" fontSize="12" text="实体数量：0"/>
									<s:HGroup >
										<s:Label id="mTipsSizeLabel" fontSize="12" text="文字大小："/>
										<s:TextInput id="mTipsSizeInput" width="50" restrict="0-9" />
									</s:HGroup>
									<s:HGroup >
										<s:Label id="mProgressLabel" fontSize="12" text="底部位置："/>
										<s:TextInput id="mProgressInput" width="50" restrict="0-9" />
									</s:HGroup>
								</s:VGroup>
							</s:HGroup>
						</s:Panel>
					</s:VGroup>
				</s:Group>
				<ns1:EditSection>
				</ns1:EditSection>
				
				<s:VGroup width="20" height="100%"/>
				
			</s:HGroup>
			
			<!-- timeline -->	
			<s:Group width="100%" height="40">	
				<!-- background color -->
				<s:Rect top="0" left="0" right="0" bottom="0">
					<s:fill><s:SolidColor color="0xEEEEEE"/></s:fill>
				</s:Rect>
			</s:Group>
		</s:VGroup>
	</s:Group>
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
</s:Module>
