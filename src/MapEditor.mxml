			private function sendToServer(e:Event):void
			{
				if(_tree.selectedIndex == -1)
				{
					Alert.show("上传前请先选择关卡！");
					return;
				}
				
				saveFile(null);
				if (ServerManager.getInstance().uploadFilesToServer(File.desktopDirectory.resolvePath("editor/export"), tagInput.text)) {
//					Alert.show("上传成功！");
				}
				else {
					Alert.show("上传失败！"); 
				}
			}
			
