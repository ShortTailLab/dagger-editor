						<mx:Tree x="0" y="128" width="100%" height="100%"></mx:Tree>
					</s:VGroup>
				</s:Panel>
				
			</s:VGroup>
			<s:Panel width="150" height="100%" dropShadowVisible="false" title="元素属性">
