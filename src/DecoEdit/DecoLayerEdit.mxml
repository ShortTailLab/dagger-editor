				<s:Label x="8" y="223" text="Y速度"/>
				<s:Label x="9" y="247" text="旋转速度"/>
				<s:Label x="8" y="273" text="旋转速度"/>
				<s:Label x="10" y="300" text="每屏数量"/>
				<s:HGroup x="28" y="55" horizontalAlign="left">
					<s:RadioButton label="固定" groupName="radiogroup1"/>
					<s:RadioButton label="随机" groupName="radiogroup1"/>
				</s:HGroup>
				<s:VGroup x="28" y="200" horizontalAlign="left">
					<s:HGroup>
						<s:RadioButton label="abs" groupName="radiogroup1"/>
						<s:RadioButton label="p%" groupName="radiogroup1"/>
					</s:HGroup>
					<s:HGroup>
						<s:RadioButton label="┏" groupName="radiogroup1"/>
						<s:RadioButton label="┓" groupName="radiogroup1"/>
						<s:RadioButton label="┗" groupName="radiogroup1"/>
						<s:RadioButton label="┛" groupName="radiogroup1"/>
					</s:HGroup>
				</s:VGroup>
				<s:HGroup x="28" y="75">
					<s:TextInput x="0" y="0" width="50"/>
					<s:Label x="55" y="0" text="~"/>
					<s:TextInput x="60" y="0" width="50"/>
				</s:HGroup>
			</s:Panel>
			<s:Scroller width="100%" height="100%">
				<s:Group width="100%" height="100%">
					<s:Group width="100%" height="100%">
					</s:Group>
				</s:Group>
			</s:Scroller>
		</s:HGroup>
	</s:Group>
